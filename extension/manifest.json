{
"manifest_version": 3,
"name": "Phishing URL Detector",
"version": "1.0",
"description": "Checks the current tab's URL against an ML-powered phishing detection API.",
"icons": {
"16": "icons/icon16.png",
"48": "icons/icon48.png",
"128": "icons/icon128.png"
},
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "icons/icon16.png",
"48": "icons/icon48.png"
}
},
"permissions": [
"activeTab",
"storage",
"scripting"
],
"background": {
"service_worker": "background.js"
},
"host_permissions": [
"<all_urls>"
]
}